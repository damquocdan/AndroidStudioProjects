<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|top"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingTop="20dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="390dp"
        android:layout_height="100dp"
        android:contentDescription="Logo ứng dụng"
        tools:srcCompat="@drawable/img" />



    <EditText
        android:id="@+id/Inputname"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Nhập vào tên của bạn" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Giới tính của bạn?"
        android:textSize="20dp" />

    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/genderNam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nam" />

        <RadioButton
            android:id="@+id/genderNu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nữ" />
    </RadioGroup>

    <TextView
        android:id="@+id/favorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sở thích của bạn?"
        android:gravity="center"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/fvAmNhac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Âm nhạc" />

        <CheckBox
            android:id="@+id/fvDuLich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Du lịch" />

        <CheckBox
            android:id="@+id/fvTheThao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thể Thao" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:text="Lưu dữ liệu" />
    <TextView
        android:id="@+id/hienThiTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"/>

</LinearLayout>
