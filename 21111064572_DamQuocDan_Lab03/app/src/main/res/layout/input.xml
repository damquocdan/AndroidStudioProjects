<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ tên của bạn là gì ?"
        android:textColor="#673AB7"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/hotendt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập vào Họ và Tên"
        android:ems="10"
        android:inputType="text" />

    <Button
        android:id="@+id/guiBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gửi" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Điểm của bạn là: "
        android:textAlignment="center"
        android:textColor="#816868"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/diemdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#EC1111"
        android:textSize="34sp"
        android:textStyle="bold" />

</LinearLayout>